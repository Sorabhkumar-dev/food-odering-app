<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="String" />

        <variable
            name="menu"
            type="com.sorabh.grabfood.api_response_classes.restaurant_menu_response.DataX" />
        <variable
            name="onOderButtonClicked"
            type="com.sorabh.grabfood.ui.adapter.CartViewHolder.OnOderButtonClickedListener" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cart_adapter_sno"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{position}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cart_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cart_adapter_sno"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="@{menu.name}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cart_adapter_price"
                txt="@{menu.cost_for_one}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cart_adapter_sno"
                android:layout_below="@id/cart_adapter_name"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_place_oder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/cart_place_oder"
                android:onClick="@{() -> onOderButtonClicked.onOderButtonClicked(menu)}"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>