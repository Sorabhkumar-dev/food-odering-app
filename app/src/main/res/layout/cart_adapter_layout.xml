<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="String" />

        <variable
            name="menu"
            type="com.sorabh.grabfood.domain.model.restaurant_menu_response.Menu" />

        <variable
            name="onOderButtonClicked"
            type="com.sorabh.grabfood.ui.adapter.CartViewHolder.OnOderButtonClickedListener" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cart_adapter_sno"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tool:text="1."
                android:text="@{position}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cart_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cart_adapter_sno"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@id/cart_adapter_sno"
                app:layout_constraintStart_toEndOf="@id/cart_adapter_sno"
                app:layout_constraintTop_toTopOf="@id/cart_adapter_sno"
                tool:text="Sorabh Kumar"
                android:text="@{menu.name}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cart_adapter_price"
                txt="@{menu.cost_for_one}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cart_adapter_sno"
                android:layout_below="@id/cart_adapter_name"
                android:layout_marginVertical="10dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/cart_adapter_name"
                app:layout_constraintTop_toBottomOf="@id/cart_adapter_name"
                tool:text="$300" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_place_oder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/cart_place_oder"
                android:onClick="@{() -> onOderButtonClicked.onOderButtonClicked(menu)}"
                android:textAllCaps="false"
                app:cornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>